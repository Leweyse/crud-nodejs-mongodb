
 <div class="row">
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                {{#each result}}
                <form action="/notes/gameNote" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="{{title}}" readonly>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="confirm_title" placeholder="Confirme título" value="{{confirm_title}}" autocomplete="off" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="description" value="{{description}}" readonly>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="confirm_description" placeholder="Confirme descripción" value="{{confirm_description}}" autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-sm">
                        Check Answers
                    </button>
                </form>
                {{/each}}
            </div>
        </div>
    </div>
</div>
