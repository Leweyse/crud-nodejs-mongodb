<section class="bewerken-infinitief_body col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/uitdrukkingen/bewerken/{{uitdrukking._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input class="form-control" type="text" name="uVlaams" value="{{uitdrukking.uVlaams}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="uSpaans" value="{{uitdrukking.uSpaans}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
