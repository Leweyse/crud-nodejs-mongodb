<section class="login_body">
    <div id="login__bg">
        {{>navigation}}
        <div class="login__page">
            <div class="login__container">
                <div class="login--left">
                    <div class="left__login">Login</div>
                    <div class="left__eula">By logging in you agree to the ridiculously long terms that you didn't bother to read</div>
                </div>
                <div class="login--right">
                    <svg class="right__svg" viewBox="0 0 320 300">
                        <defs>
                            <linearGradient
                                inkscape:collect="always"
                                id="linearGradient"
                                x1="13"
                                y1="193.49992"
                                x2="307"
                                y2="193.49992"
                                gradientUnits="userSpaceOnUse">
                                <stop
                                    style="stop-color:#ff00ff;"
                                    offset="0"
                                    id="stop876" />
                                <stop
                                    style="stop-color:#ff0000;"
                                    offset="1"
                                    id="stop878" />
                          </linearGradient>
                        </defs>
                        <path class="right__path" d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
                    </svg>
                    <form class="login__form" action="/users/signin" method="POST">
                        <label for="email">Email</label>
                        <input type="email" id="login__email" maxlength="256" name="email" autofocus>
                        <label for="password">Password</label>
                        <input type="password" id="login__password" name="password" placeholder="••••••♦✈">
                        <input id="login__button" type="submit" value="Login">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/login_functions.js" charset="utf-8"></script>
