<section class="signUp_body">
    <div id="signup__bg">
        {{>navigation}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    Account Register
                </div>
                <div class="card-body">
                    <form action="/users/signup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Ingrese nombre" value="{{name}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Ingrese email" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Ingrese password" value="{{password}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password" placeholder="Confirme password" value="{{confirm_password}}">
                        </div>
                        <button class="btn btn-primary btn-block">
                            Sign Up
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
